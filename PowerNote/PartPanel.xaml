<local:EntryPanel x:Class="PowerNote.PartPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PowerNote"
             xmlns:models="clr-namespace:PowerNote.Models"
             mc:Ignorable="d"
             d:DesignWidth="300"
             Orientation="Horizontal">
    <!--<local:EntryPanel.TextBox Text="{Binding Entry.NickName}" BorderBrush="WhiteSmoke"/>-->
    <!--Above won't work without defining dependency properties. SO best approach, just define ItemMenus here-->
    <!--Well no, actually, just define textBox in cs. Fair play, since XAML won't let you define a base view in XAML-->
    <TextBox Text="{Binding Entry.NickName}" BorderBrush="WhiteSmoke">
        <TextBox.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Insert part" Click="insertPart_Click"></MenuItem>
                <MenuItem Header="Delete entry" Click="deleteEntry_Click"></MenuItem>
            </ContextMenu>
        </TextBox.ContextMenu>
    </TextBox>
    <local:TagListBox ItemsSource="{Binding Entry.Tags}"/>
    <local:MyAutoCompleteBox x:Name="MyAutoCompleteBox" ItemsSource="{Binding AllTags}"/>
</local:EntryPanel>
