<DockPanel x:Class="PowerNote.MainPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PowerNote"
        Background="{StaticResource BackgroundBrush}">
    <Menu DockPanel.Dock="Top">
        <MenuItem Header="Options">
            <MenuItem Header="Seed the database" Click="Seed_Click"/>
        </MenuItem>
    </Menu>
    <Button Content="Do the thing" Click="DoTheThing" DockPanel.Dock="Bottom"></Button>
    <local:DisplayPanel x:Name="DisplayPanel" DockPanel.Dock="Left"></local:DisplayPanel>
    <local:EntryPropertiesPanel x:Name="PropsPanel" DockPanel.Dock="Left" DataContext="{Binding SelectedEntryVM}"></local:EntryPropertiesPanel>
</DockPanel>
