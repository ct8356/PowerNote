<StackPanel x:Class="PowerNote.OptionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerNote"
             mc:Ignorable="d" 
             Orientation="Horizontal">
    <CheckBox Name="ShowAllEntriesCBox" Content="Show all entries" IsChecked="{Binding ShowAllEntries, Mode=TwoWay}"></CheckBox>
    <CheckBox Name="ShowAllChildrenCBox" Content="Show all children" IsChecked="{Binding ShowAllChildren}"></CheckBox>
</StackPanel>
