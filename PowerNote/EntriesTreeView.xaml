<TreeView x:Class="PowerNote.EntriesTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerNote"
             xmlns:VMs="clr-namespace:PowerNote.ViewModels"
             xmlns:CJT="clr-namespace:CJT;assembly=CJT"
             mc:Ignorable="d"
             ItemsSource="{Binding FirstGenEntryVMs}"
             Background="{StaticResource BackgroundBrush}"
             BorderBrush="{StaticResource BackgroundBrush}">
    <!-- I tried Binding to FilteredStudents (the queryable) but did not work. Unsurprising really. 
    Usually cannot bind to a queryable.-->
    <!-- u were so close all along. Just forgot to make entryVMs PUBLIC PROPERTY!-->
    <!--<TreeView.ItemTemplate>
        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
            <local:EntryPanel/>
        </HierarchicalDataTemplate>
    </TreeView.ItemTemplate>-->
    <TreeView.ItemContainerStyle>
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding Expanded, Mode=TwoWay}"/>
        </Style>
    </TreeView.ItemContainerStyle>
    <TreeView.Resources>
        <HierarchicalDataTemplate DataType="{x:Type VMs:TaskVM}"  ItemsSource="{Binding Children}">
            <local:EntryPanel>
                <CJT:ListBox DataContext="{Binding TagsVM}" 
                             ItemsSource="{Binding SelectedItems}"
                             ItemTemplate="{StaticResource LinkedTextBlock}"/>
                <CJT:AutoCompleteBox DataContext="{Binding TagsVM}" 
                                     ItemsSource="{Binding SelectableItems}"/>
            </local:EntryPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type VMs:PartClassVM}"  ItemsSource="{Binding Children}">
            <local:EntryPanel>
                <CJT:ListBox DataContext="{Binding TagsVM}" 
                             ItemsSource="{Binding SelectedItems}"
                             ItemTemplate="{StaticResource LinkedTextBlock}"/>
                <CJT:AutoCompleteBox DataContext="{Binding TagsVM}" 
                                     ItemsSource="{Binding SelectableItems}"/>
            </local:EntryPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type VMs:PartInstanceVM}"  ItemsSource="{Binding Children}">
            <local:EntryPanel>
                <CJT:ListBox DataContext="{Binding TagsVM}" 
                             ItemsSource="{Binding SelectedItems}"
                             ItemTemplate="{StaticResource LinkedTextBlock}"/>
                <CJT:AutoCompleteBox DataContext="{Binding TagsVM}" 
                                     ItemsSource="{Binding SelectableItems}"/>
            </local:EntryPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type VMs:TagVM}"  ItemsSource="{Binding Children}">
            <local:EntryPanel>
                <CJT:ListBox DataContext="{Binding TagsVM}" 
                             ItemsSource="{Binding SelectedItems}"
                             ItemTemplate="{StaticResource LinkedTextBlock}"/>
                <CJT:AutoCompleteBox DataContext="{Binding TagsVM}" 
                                     ItemsSource="{Binding SelectableItems}"/>
            </local:EntryPanel>
        </HierarchicalDataTemplate>
    </TreeView.Resources>
</TreeView>
